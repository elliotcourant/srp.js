{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "importHelpers": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "target": "ES2022"
  },
  "include": [
    "src/**/*"
  ]
}
